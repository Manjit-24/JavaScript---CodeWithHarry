// Conditional Expressions

const prompt=require('prompt-sync')();


let marks = prompt("Enter your marks: ");
marks = Number.parseInt(marks);

if (marks >= 90) {
  console.log("Grade: A+");
} else if (marks >= 80) {
  console.log("Grade: A");
} else if (marks >= 70){
  console.log("Grade: B");
} else if (marks >= 60) {
  console.log("Grade: C");
} else if (marks >= 50) {
  console.log("Grade: D");
} else {
  console.log("Grade: F (Failed)");
}



// Ternary Operator

// ðŸŽ¯ Example: Check if a Number is Even or Odd Using Ternary Operator

let number = 7;

// Use ternary operator to check if the number is even or odd
let result = (number % 2 === 0) ? "Even" : "Odd";

console.log("The number is:", result);
